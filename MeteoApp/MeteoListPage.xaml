<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeteoApp.MeteoListPage">
    <ContentPage>
        <ContentPage.ToolbarItems>
            <ToolbarItem Text="TestPage" Clicked="OnTestPageClicked" />
            <ToolbarItem Text="Add" Clicked="OnItemAdded" />
        </ContentPage.ToolbarItems>

        <StackLayout Margin="20">
            <!-- Visualizza la CurrentLocation -->
            <Label Text="Current Location:" FontAttributes="Bold" FontSize="18" />
            <Label Text="{Binding CurrentLocation.CompleteAddress}" FontSize="14" LineBreakMode="WordWrap"/>

            <!-- Lista delle Entries -->
            <ListView x:Name="zlistView" ItemSelected="OnListItemSelected" ItemsSource="{Binding Entries}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="100">
                            <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                                <Label Text="{Binding CompleteAddress}" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand" LineBreakMode="WordWrap" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage>
</Shell>